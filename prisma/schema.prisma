generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  USER
  ADMIN
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String
  password String
  role Role @default(USER)

  // Relations
  createdTasks  Task[]   @relation("CreatedTasks")
  assignedTasks TaskAssignment[]
  comments Comment[] @relation("UserComments")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TaskStatus {
  todo
  in_progress
  done
}

enum TaskPriority {
  low
  medium
  high
}

model Comment {
  id Int @default(autoincrement()) @id
  content String

  // Relations
  taskId Int
  task Task @relation("TaskComments", fields: [taskId], references: [id])
  createdById Int
  createdBy User @relation("UserComments", fields: [createdById], references: [id])

  createdAt DateTime @default(now())
}

model Task {
  id    Int     @default(autoincrement()) @id
  title String
  description String?

  status TaskStatus @default(todo)
  priority TaskPriority @default(medium)
  dueDate DateTime?
  completedAt DateTime?

  // Relations
  createdById Int
  createdBy    User       @relation("CreatedTasks", fields: [createdById], references: [id])
  assignees   TaskAssignment[]
  files Task_Files[] @relation("TaskFiles")
  comments Comment[] @relation("TaskComments")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdById])
}

model TaskAssignment {
  taskId Int
  userId Int

  task Task @relation(fields: [taskId], references: [id])
  user User @relation(fields: [userId], references: [id])

  assignedAt DateTime @default(now())

  @@id([taskId, userId])
}


model Task_Files {
  id Int @default(autoincrement()) @id
  fileUrl String
  fileType String
  mimeType String
  size Int

  // Relations
  taskId Int
  task Task @relation("TaskFiles", fields: [taskId], references: [id])
  createdAt DateTime @default(now())
}